<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Your Basket</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
        
        <div class="container">
            <h1>Your Basket</h1>
            
            <% if (basketItems.length > 0) { %> <!-- Check if basket has items -->
                <ul>
                    <% basketItems.forEach(item => { %>
                        <li>
                            <!-- Link to product page -->
                            <a href="/product/<%= item.productId %>">
                                <h2><%= item.name %></h2>
                            </a>
                            <p>Price (Each): £<%= item.price ? item.price.toFixed(2) : '0.00' %></p>
                            <p>Total for Item: £<%= item.price ? (item.price * item.quantity).toFixed(2) : '0.00' %></p>

                            <!-- Quantity Controls -->
                            <form action="/basket/update" method="POST">
                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                <button type="submit" name="action" value="decrease">-</button>
                            </form>
                            <span>Quantity: <%= item.quantity %></span>
                            <form action="/basket/update" method="POST">
                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                <button type="submit" name="action" value="increase">+</button>
                            </form>

                            <!-- Remove Item -->
                            <form action="/basket/remove" method="POST">
                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                <button type="submit">Remove</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
                <h2>Total: £<%= basketTotal.toFixed(2) %></h2>
                
                <!-- Checkout Button -->
                <form action="/checkout" method="POST">
                    <button type="submit">Checkout</button>
                </form>
            <% } else { %>
                <p>Your basket is empty.</p> <!-- If basket is empty -->
            <% } %>
        </div>

        <%- include('partials/footer') %>
    </body>
</html>
