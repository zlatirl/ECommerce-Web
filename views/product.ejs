<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= product.name %> - Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/main.css">
    </head>

    <body>
        <%- include('partials/header') %>

        <div class="container py-5">
            <div class="row">
                <!-- Product Image -->
                <div class="col-md-6">
                    <div class="product-image mb-4">
                        <img src="<%= product.image || '/images/placeholder.png' %>" class="img-fluid rounded" alt="<%= product.name %>">
                    </div>
                </div>

                <!-- Product Details -->
                <div class="col-md-6">
                    <h1 class="mb-3"><%= product.name %></h1>
                    <h4 class="text-success">Price: Â£<%= product.price.toFixed(2) %></p>
                    <p class="mt-3"><strong>Description:</strong> <%= product.description %></p>
                    
                    <!-- Add to Basket Form -->
                    <form action="/basket/add" method="POST" class="mt-4">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <div class="mb-3">
                            <label for="quantity">Quantity:</label>
                            <input type="number" name="quantity" id="quantity" value="1" min="1" required>
                        </div>
                        <button type="submit" class="btn btn-warning">Add to Basket</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        <%- include('partials/footer') %>
    </body>
</html>
